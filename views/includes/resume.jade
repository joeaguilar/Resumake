				span &nbsp;
				span.glyphicon.glyphicon-phone
			span &nbsp;&nbsp;|&nbsp;
			a(tooltip="Web address", tooltip-placement="top", tooltip-trigger="mouseenter", tooltip-popup-delay="1000", ng-href="[[job.website]]", target="_blank")
				span(ng-bind="job.name")
				span &nbsp;
				span.glyphicon.glyphicon-globe
			span &nbsp;&nbsp;|&nbsp;
			a(tooltip="Address", tooltip-placement="top", tooltip-trigger="mouseenter", tooltip-popup-delay="1000", ng-href="[[job.loc]]", target="_blank")
				span(ng-bind="job.address")
				span &nbsp;
				span.glyphicon.glyphicon-map-marker

